@inherits UmbracoTemplatePage
@{
    Layout = null;
}
<!doctype html>

<html lang="en">

    <head>
        <meta charset="utf-8">
        <title>The HTML5 Herald</title>
        <meta name="description" content="Sample page">
        <meta name="author" content="Intive">
    </head>

    <body>
        <header>
            <ul class="vertical medium-horizontal menu">
                <li><a href="#0">Item 1</a></li>
                <li><a href="#0">Item 2</a></li>
                <li><a href="#0">Item 3</a></li>
            </ul>
        </header>

        <main role="main" class="main">
            <h1 class="main__header">Page Heading</h1>
            <div class="content">
                @RenderBody()
            </div>
        </main>

        <footer role="contentinfo">
            <div>Page footer content</div>

            <small>Copyleft &copy; <time datetime="<%= htmlWebpackPlugin.options.year %>"><%= htmlWebpackPlugin.options.year %></time></small>
        </footer>
    </body>
</html>
